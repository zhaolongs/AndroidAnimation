<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_bujian_xml_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="补间动画-Xml" />

    <Button
        android:id="@+id/bt_bujian_java_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="补间动画-Java" />

    <Button
        android:id="@+id/bt_value_xml_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="属性动画-ValueAnimator - Xml" />

    <Button
        android:id="@+id/bt_value_java_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性动画-ValueAnimator-Java" />

    <Button
        android:id="@+id/bt_obj_xml_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="属性动画-ObjectAnimator - Xml" />

    <Button
        android:id="@+id/bt_obj_java_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性动画-ObjectAnimator-Java" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@mipmap/banner1" />

</LinearLayout>